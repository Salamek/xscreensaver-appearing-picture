<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="xscreensaver-appearing-picture" _label="Appearing picture" gl="yes">

    <hgroup>
        <vgroup>
            <number id="fps" type="slider" arg="-p %"
                    _low-label="  Frame rate      Low" _high-label="High"
                    low="25" high="60" default="25" />
            <number id="animation_speed" type="slider" arg="-s %"
                    _low-label="Animation speed     Slow" _high-label="Fast"
                    low="1" high="85" default="1" />
            <number id="display_time"  arg="-t %"  _label="Display time (s)"
                    low="1" high="43200" default="5" />
            <xscreensaver-image />
        </vgroup>

        <vgroup>
            <file id="picture_path" _label="Picture path"  arg="-c %" />
            <boolean id="show_fps" _label="Show frame rate" arg-set="-f"/>
            <boolean id="alternative_loader" _label="Use alternative loader instead of native one" arg-set="-a"/>
            <string id="background_color" _label="Background color" arg="-b %"/>
        </vgroup>
    </hgroup>
    <xscreensaver-updater/>

    <_description>
        Simple randomly appearing picture with fade in/out animation!

        Written by Adam Schubert; 2021.
    </_description>
</screensaver>
